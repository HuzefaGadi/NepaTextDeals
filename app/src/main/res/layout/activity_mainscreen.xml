<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backimage"
    tools:context=".MainScreenActivity" 
    android:id="@+id/layout_mainscreen">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/banner_alt"
        android:gravity="top"
        android:src="@drawable/top_base" />

    <TextView
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:gravity="center"
        android:paddingBottom="80dp"
        android:layout_marginTop="15dp"
        android:text="@string/footer"
        android:textColor="#ffffff"
        android:textSize="19sp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp" />

    <Button
        android:id="@+id/redeem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custombutton"
        android:paddingBottom="12dp"
        android:paddingRight="6dp"
        android:text="@string/redeem"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:shadowColor="#000"
        android:shadowDx="-2"
        android:shadowDy="4"
        android:shadowRadius="7"
        android:layout_marginBottom="50dp" />

    <Button
        android:id="@+id/checkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/redeem"
        android:layout_alignLeft="@+id/redeem"
        android:background="@drawable/custombutton"
        android:paddingBottom="12dp"
        android:paddingRight="6dp"

        android:text="@string/check"
        android:layout_marginTop="62dp"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:shadowColor="#000"
        android:shadowDx="-2"
        android:shadowDy="4"
        android:shadowRadius="7" />

    <TextView
        android:id="@+id/welcome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:gravity="center"
        android:text="@string/welcome2"
        android:textColor="#ffffff"
        android:textSize="48sp"
        android:textStyle="bold"
        android:shadowColor="#000"
        android:shadowDx="-2"
        android:textAllCaps="true"
        android:shadowDy="4"
        android:shadowRadius="7" />

    <TextView
        android:id="@+id/welcome1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/welcome2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="@string/welcome1"
        android:textColor="#ffffff"
        android:shadowColor="#000"
        android:shadowDx="-2"
        android:shadowDy="4"
        android:shadowRadius="7"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:gravity="center"
        android:textSize="30sp" 
        android:text="@string/welcome"
        android:textColor="#ffffff"
        android:shadowColor="#000"
        android:shadowDx="-2"
        android:shadowDy="4"
        android:shadowRadius="7"  />
    
    <ImageView
          android:id="@+id/imageView2"
          android:layout_width="186dp"
          android:layout_height="186dp"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="63dp"
          android:contentDescription="@string/banner_alt"
          android:scaleType="fitCenter"
          android:adjustViewBounds="true"
           />
    
    <ProgressBar
          android:id="@+id/ProgressBar1"
          android:layout_width="wrap_content"
          android:layout_height="90dp"
          android:layout_alignBottom="@+id/imageView2"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="31dp" />

    <EditText
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/textToProceed"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <requestFocus/>
        </EditText>

</RelativeLayout>
