<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backimage" 
    tools:context=".SuccessCheckActivity"
    android:id="@+id/layout_successcheckin">
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/banner_alt"
        android:gravity="top"
        android:src="@drawable/top_base" />

    <TextView
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="@string/footer"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff"
        android:textSize="19sp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="80dp" />

    <Button
        android:id="@+id/buttonreturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp"
        android:text="@string/button_return"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:background="@drawable/custombutton"
        android:paddingBottom="12dp"
        android:paddingRight="6dp"
        android:shadowColor="#000"
        android:shadowDx="-2"
        android:shadowDy="4"
        android:shadowRadius="7" />

    <TextView
        android:id="@+id/messagesuccesscheckin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/messagesuccesscheckin"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="@string/messagesuccesscheckin1"
        android:textColor="#ffffff"
        android:textSize="30sp" 
        android:shadowColor="#000"
        android:shadowDx="-2"
        android:shadowDy="4"
        android:shadowRadius="7" />
    
    <TextView
        android:id="@+id/messagesuccesscheckin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonreturn"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="@string/messagesuccesscheckin2"
        android:textColor="#ffffff"
        android:textSize="30sp" 
        android:shadowColor="#000"
        android:shadowDx="-2"
        android:shadowDy="4"
        android:shadowRadius="7" />

    <TextView
        android:id="@+id/messagesuccesscheckin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="60dp"
        android:text="@string/messagesuccesscheckin"
        android:textColor="#ffffff"
        android:textSize="48sp"
        android:shadowColor="#000"
        android:shadowDx="-2"
        android:shadowDy="4"
        android:shadowRadius="7" />
    
    <ImageView
          android:id="@+id/imageView2"
          android:layout_width="186dp"
          android:layout_height="186dp"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="63dp"
          android:contentDescription="@string/banner_alt"
          android:scaleType="fitCenter"
          android:adjustViewBounds="true"
           />
    
    
    <ProgressBar
          android:id="@+id/ProgressBar1"
          android:layout_width="wrap_content"
          android:layout_height="90dp"
          android:layout_alignBottom="@+id/imageView2"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="31dp" />

</RelativeLayout>
